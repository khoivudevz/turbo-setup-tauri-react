{
	"name": "turbo-setup-react-ts-tailwind",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --port 8000 --mode dev",
		"dev:stg": "vite --port 8000 --mode stg",
		"dev:prod": "vite --port 8000 --mode prod",
		"build": "tsc -b && vite build --mode prod",
		"build:stg": "tsc -b && vite build --mode stg",
		"build:dev": "tsc -b && vite build --mode dev",
		"tauri:dev": "bun tauri dev",
		"tauri:build": "bun tauri build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview --port 8000",
		"prepare": "husky"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.12",
		"@tailwindcss/vite": "^4.1.12",
		"axios": "^1.11.0",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.13",
		"nuqs": "^2.5.1",
		"prettier": "^3.6.2",
		"rc-dialog": "^10.0.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router-dom": "^7.8.2",
		"styled-components": "^6.1.19",
		"swr": "^2.3.6",
		"tailwind-merge": "^3.3.1",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.34.0",
		"@tauri-apps/cli": "^2.8.3",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.1.8",
		"@vitejs/plugin-react-swc": "^4.0.1",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.34.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"i18next": "^25.4.2",
		"lint-staged": "^16.1.5",
		"postcss": "^8.5.6",
		"react-i18next": "^15.7.2",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0",
		"vite": "^7.1.3",
		"vite-plugin-preload": "^0.4.2"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"bun prettier --write"
		]
	}
}
